<%= form_for(@model, url: @path) do |f| %>

  <div class = "row">
    <div class="well col-md-4 col-md-offset-4">


      <!-- titles -->
      <% if @path == signin_path %><h2>Sign into gCamp</h2><% end %>
      <% if @path == signup_path %><h2>Sign Up for gCamp!</h2><% end %>
      <% if @new_user %><h2>New User</h2><% end %>
      <% if @edit_user %><h2>Edit User</h2><% end %>


      <!-- signin_error -->
      <% if @sign_in_error %>
        <div class = 'error'>
          <br><p><%= @sign_in_error %></p>
        </div>
      <% end %>
      <br>


      <!-- signup errors -->
      <% if @path == signup_path %>
        <% if @model.errors.present? %>
          <% @model.errors.full_messages.each do |message| %>
            <div class = 'error'>
              <%= message %>
            </div>
          <% end %><br>
        <% end %>
      <% end %>


      <!-- fields -->
      <% if @path != signin_path %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus=>true, :class=>"col-md-12" %>
      <br><br><br>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class=>"col-md-12" %>
      <br><br><br>
      <% end %>

      <%= f.label :email %>
      <%= f.email_field :email, :class=>"col-md-12" %>
      <br><br>

      <p>Password:</p>
      <%= f.password_field :password, :class=>"col-md-12" %>

      <br><br>
      <% if @path != signin_path %>
      <p>Password Confirmation:</p>
      <%= f.password_field :password_confirmation, :class=>"col-md-12" %>
      <% end %>


      <!-- buttons -->
      <br><br>

      <% if @new_user %>
        <%= f.submit 'Create User', :class=>"btn btn-submit" %>
      <% end %>

      <% if @edit_user %>
        <%= f.submit 'Update User', :class=>"btn btn-submit" %>
        <%= link_to 'Delete User', user_path(@user), method: :delete, :class=>'btn btn-danger' %>
      <% end %>

      <% if @path == signup_path %>
        <%= f.submit 'Sign Up' %>
      <% end %>

      <% if @path == signin_path %>
        <%= f.submit 'Sign In' %>
      <% end %>
    </div>
  </div>

<% end %>
