<%= form_for(@user) do |f| %>

  <div class="first_name_field text_field">
    <%= f.label :first_name, :class=>"label col-md-2" %>
    <%= f.text_field :first_name, :autofocus=>true, :class=>"col-md-10" %>
    <br><br>
  </div>

  <div class="last_name_field">
    <%= f.label :last_name, :class=>"label col-md-2" %>
    <%= f.text_field :last_name, :class=>"col-md-10" %>
    <br><br>
  </div>

  <div class="email_field">
    <%= f.label :email, :class=>"label col-md-2" %>
    <%= f.email_field :email, :class=>"col-md-10" %>
    <br><br>
  </div>

  <div class="actions btn_create_user">
    <%= f.submit 'Create User', :class=>"btn btn-primary" %>
  </div>

<% end %>
