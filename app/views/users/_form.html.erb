  <%= form_for(@user, url: signup_path) do |f| %>


  <div class = "row">
    <div class="well col-md-4 col-md-offset-4">

      <!-- titles -->
      <!-- <% if @signup %><h2>Sign Up for gCamp!</h2><% end %> -->
      <% if @new_user %><h2>New User</h2><% end %>
      <% if @edit_user %><h2>Edit User</h2><% end %>

      <br>
      <!-- fields -->
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus=>true, :class=>"col-md-12" %>
      <br><br><br>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class=>"col-md-12" %>
      <br><br><br>

      <%= f.label :email %>
      <%= f.email_field :email, :class=>"col-md-12" %>
      <br><br><br>

      <p>    Password:  </p>
      <%= f.password_field :password_digest, :class=>"col-md-12" %>

      <br><br>
      <p>  Password Confirmation:</p>
      <%= f.password_field :password_confirmation, :class=>"col-md-12" %>

      <!-- buttons -->
      <br><br>
      <% if @new_user %>
        <%= f.submit 'Create User', :class=>"btn btn-submit" %>
      <% end %>

      <% if @edit_user %>
        <%= f.submit 'Update User', :class=>"btn btn-submit" %>
        <%= link_to 'Delete User', user_path(@user), method: :delete, :class=>'btn btn-danger' %>
      <% end %>

      <% if @signup %>
        <%= f.submit 'Sign Up' %>
      <% end %>

    </div>
  </div>
<% end %>
