<table class = "table">
  <h1>
    Users
    <%= link_to "New User", new_user_path, :class => "btn btn-primary pull-right" %>
  </h1>
  <hr>

  <thead>
    <tr>
      <th>
        <h3>Name</h3>
      </th>
      <th>
        <h3>E-Mail</h3>
      </th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.first_name %>  <%= user.last_name %>
      </td>
      <td>
        <%= mail_to(user.email) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_user_path(user) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
