<%= page_header @user.full_name do%>
  <% if current_user == @user %>
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary pull-right' %>
  <% end %>
<% end %>

<dl class = 'dl-horizontal'>
  <dt>First Name:</dt>
  <dd><%= @user.first_name %></dd>

  <dt>Last Name:</dt>
  <dd><%= @user.last_name %></dd>

  <% if fellow_member(@user) %>
    <dt>E-Mail:</dt>
    <dd><%= mail_to(@user.email) %></dd>
  <% end %>

  <dt>Pivotal Tracker Token:</dt>
  <% if @user.tracker_token %>
    <dd><%= @user.tracker_token[0..3] + '*' * (@user.tracker_token.length - 4) %></dd>
  <% end %>
</dl>
