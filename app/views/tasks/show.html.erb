<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li class="active">Show</li>
</ol><br>

<dl class = 'dl-horizontal'>
  <h3>
  <dt>Description:</dt>
  <%= link_to 'Edit Task', edit_project_task_path(@project, @task), class: 'btn btn-info pull-right' %>
  <dd><%= @task.description %></dd>
  </h3>

  <dt>Status:</dt>
  <%if @task.complete%>
    <dd>Complete</dd>
  <%else%>
    <dd>Incomplete</dd>
  <%end%>

  <dt>Due Date:</dt>
  <% if @task.due_date %>
    <dd><%= @task.due_date.strftime('%m/%d/%Y') %></dd>
  <% else %>
    <dd>No due date set.</dd>
  <%end%>
</dl><br>

<h3>Comments</h3>
<% @task.comments.where(:id != nil).each do |comment| %>
  <hr>
  <% if comment.text != nil %>
    <div class = 'col-md-2'>
      <%= link_to comment.user.full_name, user_path(comment.user) %><br>
      <div class = 'text-muted'>
        <%= time_ago_in_words(comment.updated_at) + " ago" %><br><br>
      </div>
    </div>

      <%= comment.text %><br><br><br>
  <% end %>
<% end %>
<br><br>

<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class = 'error col-md-offset-2'>
      <%= message %>
    </div>
  <% end %><br>
<% end %>

<% if current_user != nil %>
  <%= form_for @comment do |f| %>
    <%= hidden_field_tag :task_id, @task.id %>
    <%= f.text_area :text, autofocus: true, class: 'col-md-offset-2 form-control' %>
    <%= f.submit 'Add Comment', class: 'col-md-offset-2 btn btn-submit'%>
  <% end %>
<% end %>
