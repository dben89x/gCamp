<h1>
  Projects
  <%= link_to "Create Project", new_project_path, :class => 'btn btn-primary pull-right' %>
</h1>

<%= pluralize(Comment.count, 'comment') %>
<table class = 'table'>
  <thead>
    <tr>
      <th>
        <h3>Name</h3>
      </th>
      <th>
        <h3>Tasks</h3>
      </th>
    </tr>
  </thead>
  <tbody>
   <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.name, project_path(project) %>
        </td>
        <td>
          <%= link_to project.tasks.count, project_tasks_path(project) %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
