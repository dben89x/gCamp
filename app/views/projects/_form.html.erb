<%= form_for @project do |f| %>
  <div class='row'>
    <div class='col-md-6'>

    <%= render '/errors.html.erb', model: @project %>

      <div class = "form-horizontal" role="form">

      <%= f.label :name%>
      <%= f.text_field :name, class: 'form-control', :autofocus => true %><br>

      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', projects_path, class: 'btn btn-default' %>

      </div>
    </div>
  </div>
<% end %>
